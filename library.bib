@article{zelinsky_madisonjames_1993-1,
	title = {{MADISON},{JAMES} {AND} {PUBLIC} {CHOICE} {AT} {GUCCI} {GULCH} - {A} {PROCEDURAL} {DEFENSE} {OF} {TAX} {EXPENDITURES} {AND} {TAX} {INSTITUTIONS}},
	volume = {102},
	issn = {0044-0094},
	doi = {10.2307/796793},
	abstract = {Critics of tax expenditures frequently fault the congressional committees formulating such policies and the administrative agencies implementing them for lack of subject matter expertise. They prefer direct spending programs, which supposedly are designed and executed by more expert institutions. In response, Professor Zelinsky contends that tax institutions such as the Treasury, the IRS, and the tax committees of Congress are preferable because they are subject to more numerous and diverse constituencies, are thus less susceptible to interest group capture, and so possess greater legitimacy under pluralist criteria. In support of his position, Professor Zelinsky presents empirical research indicating that the direct monetary largesse dispensed to four important interest groups substantially exceeds the tax benefits they receive, that Congress' tax-writers are less dependent for campaign contributions on particular interests than the members of Congress' direct expenditure committees, and that the general press makes the congressional tax-writing panels visible to the public at-large, while the trade press covers the direct expenditure committees more intensely for its specialized readership.},
	number = {5},
	journal = {YALE LAW JOURNAL},
	author = {ZELINSKY, E. A.},

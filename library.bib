@article{sidanius_support_2016-1,
	title = {Support for asymmetric violence among {Arab} populations: {The} clash of cultures, social identity, or counterdominance?},
	volume = {19},
	issn = {1368-4302},
	doi = {10.1177/1368430215577224},
	abstract = {Using a random sample of 383 Muslims and Christians in Lebanon and Syria, we explored the degree of public support for two distinct kinds of asymmetric violencefundamentalist violence and resistance violenceagainst the United States as a function of three explanatory narratives: a clash of cultures narrative, social identity/self-categorization theory, and a counterdominance perspective. Multiple regression analyses showed that the factors most closely associated with support of asymmetric violence among Arab populations was very much dependent upon the type of asymmetric violence. Among both Christians and Muslims, the results showed that perceived incompatibility between Arab and American cultures was the best predictor of support for fundamentalist violence, while perceived American domination of the Arab world was the distinctly strongest predictor of support for resistance violence. The theoretical and practical implications are discussed.},

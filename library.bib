@article{jagers_bridging_2021,
	title = {Bridging the ideological gap? {How} fairness perceptions mediate the effect of revenue recycling on public support for carbon taxes in the {United} {States}, {Canada} and {Germany}(sic)(sic)(sic){Palabras} {Clave}},

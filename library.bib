	number = {13},
	journal = {AMERICAN BEHAVIORAL SCIENTIST},
	author = {Vega, I. I.},
	year = {2014},
	pmid = {WOS:000344356900005},
	keywords = {UNITED-STATES, PUBLIC-OPINION, IDENTITY, POLICY, IMMIGRATION, ETHNICITY, immigration attitudes, LATINO ATTITUDES, Latinos, nationalism, NATIVIST, PANETHNICITY, racial boundaries},

	note = {Publisher: Taylor and Francis Ltd.},
	keywords = {Spiral of silence, agent-based modelling, Dr. Iris Junglas, network analysis, Prof. Frantz Rowe, simulation, social bots},
	pages = {394--412},
}

@article{varela-rey_spiral_2018,
	title = {Spiral of silence in a post-violent context: the influence of reference groups and fear of being in a minority position},

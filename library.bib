	urldate = {2022-09-16},
	journal = {Revista de Sociologia e Política},
	author = {Araújo, Clara},
	year = {2005},
	pages = {193--215},
	file = {Texto completo:C\:\\Users\\thiag_q\\Zotero\\storage\\DY595S9U\\Araújo - 2005 - Partidos políticos e gênero mediações nas rotas d.pdf:application/pdf},
}


	keywords = {IDENTIFICATION, ACTION TENDENCIES, POWER, PROCEDURAL JUSTICE, SYSTEM JUSTIFICATION, EMOTIONS, PUBLIC SUPPORT, Anger, SOCIAL-IDENTITY-MODEL, Authority legitimacy, Collective actions, CONVICTIONS, Disadvantage, VALUE PROTECTION MODEL, Violation of moral values},

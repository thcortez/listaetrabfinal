	keywords = {IMPACT, STATES, PREFERENCES, IDEOLOGY, climate change, governance, ENERGY, SYSTEMS, POLARIZATION, WORLDVIEWS, civil society, ATTRIBUTION, CHANGE POLICY, national governance},

@article{feldman_hostile_2017,
	title = {Do {Hostile} {Media} {Perceptions} {Lead} to {Action}? {The} {Role} of {Hostile} {Media} {Perceptions}, {Political} {Efficacy}, and {Ideology} in {Predicting} {Climate} {Change} {Activism}},

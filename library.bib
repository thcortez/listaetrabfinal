	author = {Henson, S. and Davis, J. M. and Swiss, L.},
	pmid = {WOS:000683684100001},
	keywords = {OPINION, TRUST, FOREIGN-AID, attitudes, DOMESTIC POLITICS, Canada, public support, development aid, engagement},
}


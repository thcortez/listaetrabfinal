	pmid = {WOS:000289158300018},
	keywords = {COLLECTIVE ACTION, CONFLICT, DYNAMICS, ALTRUISM, Cooperation, EVOLUTION, game theory, mixed equilibrium, PERSON PRISONERS-DILEMMA, POPULATIONS, prisoner's dilemma, PROVISION, public good, SOCIAL DILEMMAS, volunteer's dilemma, VOLUNTEERS DILEMMA},

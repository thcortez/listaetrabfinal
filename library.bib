	keywords = {Public opinion, POLITICS, POLICY, SUPPORT, REFORM, FREEDOM, JUSTICE, TAXATION, Carbon dioxide tax, EQUITY, Fairness, Justice},
}

@article{alhajyaseen_road_nodate,
	title = {Road safety status during {COVID}-19 pandemic: exploring public and road safety expert's opinions},

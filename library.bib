	keywords = {social movements, MOTIVATION, COLLECTIVE ACTION, MOBILIZATION, protest, BEHAVIOR, EMOTIONS, identity, REVOLUTION, Arab spring, cascades, INFORMATIONAL CASCADES, mechanisms, morality, ONSET, Syria},

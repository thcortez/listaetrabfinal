	pmid = {WOS:000590251400002},
	keywords = {CELLS, Bayesian inference, FIELDS, GUIDE, INTERFACE, LOCOMOTION, MOMENTS, STRESSES, Traction force microscopy},
}

@article{akter_social_2020,

@article{nicholson_message_2021-1,
	title = {{MESSAGE} {RECEIVED}? {THE} {ROLES} {OF} {EMOTION}, {RACE}, {AND} {POLITICS} {IN} {SOCIAL} {MOVEMENT} {PERCEPTIONS} {AND} {SUPPORT}},

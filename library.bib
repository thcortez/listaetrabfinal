	year = {2010},
	pmid = {WOS:000284435300006},
	keywords = {REPRESENTATION, ADMINISTRATIVE STATE, COMPETITION, FEDERALISM, INDEPENDENT AGENCIES, POLICY-MAKING, POLITICAL CONTROL, PRESIDENTS POWER, PRODUCT-SAFETY COMMISSION, SEPARATION},

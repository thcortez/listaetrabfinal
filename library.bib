@article{saab_acting_2015-1,
	title = {Acting in solidarity: {Testing} an extended dual pathway model of collective action by bystander group members},
	volume = {54},
	issn = {0144-6665},
	doi = {10.1111/bjso.12095},
	abstract = {We examined predictors of collective action among bystander group members in solidarity with a disadvantaged group by extending the dual pathway model of collective action, which proposes one efficacy-based and one emotion-based path to collective action (Van Zomeren, Spears, Fischer, \& Leach, 2004). Based on two proposed functions of social identity performance (Klein, Spears, \& Reicher, 2007), we distinguished between the efficacy of collective action at consolidating the identity of a protest movement and its efficacy at achieving social change (political efficacy). We expected identity consolidation efficacy to positively predict collective action tendencies directly and indirectly via political efficacy. We also expected collective action tendencies to be positively predicted by moral outrage and by sympathy in response to disadvantaged outgroup's suffering. These hypotheses were supported in two surveys examining intentions to protest for Palestine in Britain (Study 1), and intentions to attend the June 4th vigil in Hong Kong to commemorate the Tiananmen massacre among a sample of Hong Kong citizens (Study 2). The contributions of these findings to research on the dual pathway model of collective action and the different functions of collective action are discussed.},
	number = {3},
	journal = {BRITISH JOURNAL OF SOCIAL PSYCHOLOGY},
	author = {Saab, R. and Tausch, N. and Spears, R. and Cheung, W. Y.},
	year = {2015},
	pmid = {WOS:000361218000008},
	keywords = {DYNAMICS, ACTION TENDENCIES, bystander group, collective action, DISCRETE EMOTIONS, DISTINCTION, efficacy, EFFICACY, GROUP IDENTIFICATION, identity consolidation, POWER, PREDICTING SUPPORT, SOCIAL IDENTITY MODEL, solidarity, SYMPATHY},

@article{zelinsky_madisonjames_1993,
	title = {{MADISON},{JAMES} {AND} {PUBLIC} {CHOICE} {AT} {GUCCI} {GULCH} - {A} {PROCEDURAL} {DEFENSE} {OF} {TAX} {EXPENDITURES} {AND} {TAX} {INSTITUTIONS}},

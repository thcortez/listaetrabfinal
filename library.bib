	keywords = {POLITICS, IDEOLOGY, POWER, AGENCY COSTS, BEHAVIOR, ECONOMIC REGULATION, EFFICIENCY, FUTURE, REFORM ACT, ROMANCE},
	pages = {1165--1207},
}


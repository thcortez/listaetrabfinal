	keywords = {UNITED-STATES, ATTITUDES, COOPERATION, Collective action, CROSS-BOUNDARY COORDINATION, FIRE MANAGEMENT, Fire management policies, Forest management, GOVERNANCE, LANDSCAPES, OWNERS, PORTUGAL, Private forest owners, PROPERTY, Territorial context, Wildfire risk},

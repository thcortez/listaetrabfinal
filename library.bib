	pmid = {WOS:000683177900003},
	keywords = {IMPACT, IDENTITY, POLICY, OUTCOMES, Ukraine, Euromaidan, EUROMAIDAN, Maidan, social constructionism, Social movement outcomes},
	pages = {284--303},
}

@article{liedlbauer_politicising_2021,
	title = {Politicising {European} counter-terrorism: the role of {NGOs}},

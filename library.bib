	author = {BONILLA, TABITHA and TILLERY, ALVIN B.},
	month = nov,
	year = {2020},
	note = {Publisher: Cambridge University Press},
	pages = {947--962},
}

@article{giugni_was_1998,
	title = {Was {It} {Worth} the {Effort}? {The} {Outcomes} and {Consequences} of {Social} {Movements}},

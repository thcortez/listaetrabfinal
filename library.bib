	year = {2020},
	pmid = {WOS:000575170900001},
	keywords = {PUBLIC-OPINION, SOCIAL-MOVEMENTS, RACE, POLITICAL-PARTICIPATION, BLACK FEMINISM, FEMINIST CONSCIOUSNESS, GENDER-DIFFERENCES, INEQUALITY, INTERSECTIONALITY, MICROMOBILIZATION},
